<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/sopt"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/colorGray"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_id_register"
        android:hint="아이디"
        android:textColor="#000000"
        android:background="@drawable/edittext_style"
        android:layout_marginTop="30dp"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_pw_register"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_style"
        android:hint="비밀번호"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_pwcheck_register"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_style"
        android:hint="비밀번호확인"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name_register"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_style"
        android:hint="이름"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_email_register"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_style"
        android:hint="이메일"
        android:inputType="textEmailAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_phone_register"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_style"
        android:hint="핸드폰 번호"
        android:inputType="phone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:text="가입완료"
        android:textColor="#ffffff"
        android:textStyle="bold"
       android:background="@drawable/btn_style1"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>


</LinearLayout>